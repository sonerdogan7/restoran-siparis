rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Tables collection
    match /tables/{tableId} {
      allow read: if true;
      allow write: if true;
    }

    // Orders collection
    match /orders/{orderId} {
      allow read: if true;
      allow write: if true;
    }

    // Users collection
    match /users/{userId} {
      allow read: if true;
      allow write: if true;
    }

    // Menu collection
    match /menu/{itemId} {
      allow read: if true;
      allow write: if true;
    }
  }
}
